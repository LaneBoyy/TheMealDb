<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheMealDb" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/white_background</item>
        <item name="android:statusBarColor">@color/white_background</item>
    </style>

    <style name="Theme.TheMealDb" parent="Base.Theme.TheMealDb" />

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CoastTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BottomMenuStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/grey_for_icon</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemTextColor">@color/grey_for_icon</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="lineHeight">16sp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="lineHeight">16sp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabBackground">@drawable/tab_item_selector</item>
        <item name="tabGravity">start</item>
        <item name="tabPaddingStart">25dp</item>
        <item name="tabPaddingEnd">25dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="background">@color/white_background</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabStyle</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/pink</item>
        <item name="tabTextColor">@color/grey_for_text</item>
    </style>

    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundColor">@color/white_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>